// Миксины для спрайта
spriteWidth($sprite)
	width: $sprite[4]


spriteHeight($sprite)
	height: $sprite[5]

spritePosition($sprite)
	background-position: $sprite[2] $sprite[3]


spriteImage($sprite)
	background-image: url(../img/sprite/$sprite[8])
	background-color: white

sprite($sprite)
	spriteWidth($sprite)
	spriteHeight($sprite)
	spritePosition($sprite)
	spriteImage($sprite)